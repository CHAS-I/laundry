---
import Layout from "../layouts/Layout.astro";
import { Button } from "../components/shared/Button";
import { UserPlus } from "lucide-react";
import { EmployeesTable } from "../components/employees/EmployeesTable";
---

<Layout>
    <header
        class="flex flex-col md:flex-row md:items-center md:justify-between mb-6 px-4 md:px-6"
    >
        <div>
            <h1 class="text-2xl font-bold tracking-tight">
                Gesti√≥n de Personal
            </h1>
            <p class="text-slate-500">Administre los empleados de su negocio</p>
        </div>
        <div class="mt-4 md:mt-0">
            <Button className="bg-teal-600 hover:bg-teal-700 text-white">
                <UserPlus className="mr-2 h-4 w-4" />
                Agregar Empleado
            </Button>
        </div>
    </header>
    <main class="rounded-lg border bg-white shadow-sm border-[#E2E8F0]">
        <header class="flex flex-col space-y-1.5 p-6 pb-2">
            <h3 class="text-2xl font-semibold leading-none tracking-tight">
                Lista de Empleados
            </h3>
            <p class="text-slate-500 text-sm">8 empleados encontrados</p>
        </header>
        <main class="flex flex-col space-y-1.5 p-6">
            <EmployeesTable client:load />
        </main>
    </main>
</Layout>
