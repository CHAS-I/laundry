---
import {
    Home,
    LayoutDashboard,
    PlusCircle,
    ClipboardList,
    Settings,
    Users,
    UserCog,
} from "lucide-react";
import Link from "./Link.astro";
---

<aside
    class="hidden w-[250px] flex-col border-r border-r-[#E2E8F0] bg-white md:flex"
>
    <nav class="grid gap-3 p-4 text-sm font-medium">
        <Link link="/">
            <Home className="h-4 w-4" />
            Inicio
        </Link>
        <Link link="/dashboard">
            <LayoutDashboard className="h-4 w-4" />
            Dashboard
        </Link>
        <Link link="/new-service">
            <PlusCircle className="h-4 w-4" />
            Nuevo Servicio
            <div
                class="px-2.5 py-0.5 text-xs bg-teal-600/20 text-teal-600 rounded-full font-semibold"
            >
                Nuevo
            </div>
        </Link>
        <Link link="/in-process" className="text-[#00B0F0] hover:text-black">
            <ClipboardList className="h-4 w-4" />
            Vista de procesos
        </Link>
        <Link link="/clients">
            <Users className="h-4 w-4" />
            Clientes
        </Link>
        <Link link="/employees">
            <UserCog className="h-4 w-4" />
            Personal
        </Link>
        <Link link="/config">
            <Settings className="h-4 w-4" />
            Configuraci√≥n
        </Link>
    </nav>
</aside>
