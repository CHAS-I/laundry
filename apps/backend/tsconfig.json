{
    "compilerOptions": {
      "outDir": "./build",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ESNext",
      "strict": true,
      "rootDir": "src",
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
    },
    "include": ["src"]
}